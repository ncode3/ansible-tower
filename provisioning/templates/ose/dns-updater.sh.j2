#!/bin/bash
key="{{ dhcp_server_key }}"
server="10.55.102.5"
zone="ose.maskedadmins.com"
op="${1:-op}"
mac="${2:-mac}"
ip="${3:-ip}"
hostname="${4}"
reverse=$(echo ${3} | awk -F. '{print $4"."$3"." $2"."$1}')
hostip=$(ip addr list eth0 | grep 'inet ' | cut -d ' ' -f 6 | cut -d / -f1)
temp=/tmp.$$
touch $temp
cat > ${temp} <<EOF
server ${server}
key dhcpupdate ${key}
zone ${zone}
update add ${reverse}.in-addr.arpa 600 IN PTR ${hostname}
send
update add ${hostname} 600 IN A ${hostip}
send
EOF

if [ "$op" == "add" ]
then
  nsupdate -v ${temp}
  echo "$*" >> /tmp/dnsmasq.updater.txt
else
  echo "$*" >> /tmp/dnsmasq.updater.txt
fi

